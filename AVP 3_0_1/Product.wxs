<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Product Id="*" 
           Name="AVP" 
           Language="1033" 
           Version="3.0.1.0" 
           Manufacturer="msegt" 
           UpgradeCode="399b291f-af7d-40e1-9b4a-d3fc7da98def">
    
		<Package Description="AVP Installer - No dependencies" 
             InstallerVersion="200" 
             Compressed="yes" 
             InstallScope="perUser" />

		<MajorUpgrade AllowDowngrades="no" 
                  DowngradeErrorMessage="A newer version of [ProductName] is already installed."
                  AllowSameVersionUpgrades="no"/>
    
		<MediaTemplate />

    <Property Id="ARPCOMMENTS">
      AVP 3.0.1 installer. It only installs the AVP and not dependencies.     
    </Property>

    <Property Id="ARPCONTACT">
      Maria Galvez Trigo
    </Property>
    
    <Property Id="PYTHON_3_5_2">
      <RegistrySearch Id="regPYTHON_3_5_2" 
                      Root="HKCU" 
                      Type="raw" 
                      Key="SOFTWARE\Python\PythonCore\3.5\InstalledFeatures" 
                      Name="exe" 
                      Win64="yes"/>
    </Property>
    
    <Condition Message="This application requires Python 3.5.2">
      <![CDATA[ PYTHON_3_5_2 >= "3.5.2" AND PYTHON_3_5_2 < "3.5.3"]]>
    </Condition>

    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder" Name="PFiles">
        <Directory Id="INSTALLDIR" Name="AVP">
          <Component Id="readme">
            <File Id="readme" Name="README.md" Source="README.md" />
          </Component>
          <Directory Id="ItemDir" />
        </Directory>
      </Directory>
    </Directory>
    
		<Feature Id="Software" 
             Title="AVP" 
             Level="1" 
             AllowAdvertise="no" 
             ConfigurableDirectory="INSTALLDIR">
      <ComponentRef Id="readme" />
			<ComponentGroupRef Id="Items" />
		</Feature>

    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLDIR" />
    <UIRef Id="WixUI_InstallDir" />
    
	</Product>

